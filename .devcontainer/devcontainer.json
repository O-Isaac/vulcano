{
  "name": "Spring Boot & Java 25",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "features": {
    "ghcr.io/devcontainers/features/java:1": { "version": "25" },
    "ghcr.io/devcontainers/features/docker-in-docker:2": { "version": "latest" }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "vscjava.vscode-java-pack",
        "vmware.vscode-spring-boot"
      ]
    }
  },
  // Solo levantamos Docker aquí (es rápido y termina)
  "postStartCommand": "docker compose up -d",

  // Al abrir el Codespace, VS Code ejecutará esta tarea automáticamente
  "postAttachCommand": {
    "dev": "./mvnw spring-boot:run"
  },

  "forwardPorts": [8080],
  "remoteUser": "vscode"
}